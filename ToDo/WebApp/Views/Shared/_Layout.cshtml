<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<script>
        var appContext = {};
        function mainAppInit() {
            appContext.baseUrl = "@HttpRuntime.AppDomainAppVirtualPath";
            appContext.buildUrl = function(url){
                return appContext.baseUrl + url;
            }

        }
        mainAppInit();
	</script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ToDo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
				@Html.ActionLink("Invite users", "InviteUser", "Home", new { area = "" }, new { @class = "navbar-brand" })
				@Html.ActionLink("Configure users", "ConfigureUser", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li>@Html.Action("Photo", "Home")</li>
					@Html.Partial("_LoginPartial")
				</ul>
            </div>
        </div>
    </div>
    <div class="">
        @RenderBody()
    </div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
